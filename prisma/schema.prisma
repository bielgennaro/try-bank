datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String  @unique
}

model Employee {
  id          Int       @id @default(autoincrement())
  name        String
  isWorking   Boolean
  employer_id Int
  commission  Float?
  Employer    Employer? @relation(fields: [employerId], references: [id])
  employerId  Int?      @unique
}

model Employer {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  passoword String     @unique
  employees Employee[]
}
