datasource db {
  provider = "postgresql"
  url      = "postgres://root:password@localhost:5432/database"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
}

model Employee {
  id          Int       @id @default(autoincrement())
  name        String
  isWorking   Boolean
  employer_id Int
  commission  Float
  Employer    Employer? @relation(fields: [employerId], references: [id])
  employerId  Int?
}

model Employer {
  id        Int        @id @default(autoincrement())
  name      String
  employees Employee[]
}
